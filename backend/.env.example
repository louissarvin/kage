# ShadowVest Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/shadowvest"

# =============================================================================
# Redis (for nonce storage, caching)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# Solana
# =============================================================================
SOLANA_RPC_URL="https://api.devnet.solana.com"
SHADOWVEST_PROGRAM_ID="3bPHRjdQb1a6uxE5TAVwJRMBCLdjAwsorNKJgwAALGbA"

# =============================================================================
# Arcium MPC
# =============================================================================
# Get these from Arcium dashboard
ARCIUM_API_URL="https://api.arcium.com"
ARCIUM_API_KEY="your-api-key"
ARCIUM_SERVICE_KEY="service-key-for-backend-scanning"

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET="your-secure-jwt-secret-change-in-production"
JWT_EXPIRY="1h"

# =============================================================================
# Application
# =============================================================================
APP_URL="http://localhost:3000"
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"
