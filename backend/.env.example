# ShadowVest Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/shadowvest"

# =============================================================================
# Redis (for nonce storage, caching)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# Solana
# =============================================================================
SOLANA_RPC_URL="https://api.devnet.solana.com"
SHADOWVEST_PROGRAM_ID="3bPHRjdQb1a6uxE5TAVwJRMBCLdjAwsorNKJgwAALGbA"

# Service keypair for backend transactions (base58 encoded secret key)
# This is used to pay for and sign MPC transactions
# Generate with: solana-keygen new --outfile service-keypair.json
# Then encode the JSON array to base58: node -e "console.log(require('bs58').encode(Buffer.from(require('./service-keypair.json'))))"
SERVICE_KEYPAIR=""

# Light Protocol RPC endpoint
LIGHT_RPC_URL="https://devnet.helius-rpc.com"

# Arcium MPC cluster offset
ARCIUM_CLUSTER_OFFSET="456"

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET="your-secure-jwt-secret-change-in-production"
JWT_EXPIRY="1h"

# =============================================================================
# Application
# =============================================================================
APP_URL="http://localhost:3000"
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"
